<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="cn.com.buildwin.gosky.activities.PhotoActivity">

    <cn.com.buildwin.gosky.widget.imageviewer.ImageViewPager
        android:id="@+id/image_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/file_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:shadowColor="#182b18"
        android:shadowRadius="4"
        android:shadowDy="4"
        android:shadowDx="4"/>

    <ImageButton
        android:id="@+id/delete_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/media_delete"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>

</RelativeLayout>
